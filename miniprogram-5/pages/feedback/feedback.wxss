.container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }
  
  .title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }
  
  .form {
    width: 80%;
    margin: 0 auto;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 4px;
    background-color: #f5f5f5;
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .item-label {
    font-size: 16px;
    margin-bottom: 8px;
  }
  
  input[type="text"],
  textarea {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 8px;
    width: 100%;
    font-size: 16px;
    background-color: #fff;
    color: #333;
  }
  
  .submit-btn {
    background-color: #00a0e9;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 12px 24px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .submit-btn:hover {
    background-color: #0079b8;
  }